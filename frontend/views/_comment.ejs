<li id="comment-<%=comment.id%>">
  <div class="content">
    <div class="comment-content">
      <%= comment.content%>
      <br />
      <small style="font-style: italic">By~<%=comment.user.name %></small>
    </div>

    <div class="like">
      <%if(locals.user){%>
      <small>
        <a
          href="/likes/toggle?id=<%=comment._id%>&type=Comment"
          class="comment-likes"
          data-likes="<%= comment.likes.length %>"
        >
          <%= comment.likes.length %> Like
        </a></small
      >

      <%}else{%> <%= comment.likes.length %> Like <%}%> <% if(locals.user &&
      (locals.user.id == comment.user.id || locals.user.id == post.user.id)) {%>
      <small
        ><a
          href="/comments/destroy/<%=comment.id%>"
          class="delete-comment-button"
          >X</a
        ></small
      >

      <%}%>
    </div>
  </div>
</li>
