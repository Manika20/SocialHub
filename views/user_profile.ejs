<link rel="stylesheet" href="<%=assetPath('profile.css')%>" type="text/css" />
<link
  rel="stylesheet"
  href="<%=assetPath('profileasside.css')%>"
  type="text/css"
/>
<% if(user.id == profile_user.id) {%>
<main>
  <div class="pic">
    <% if(profile_user.avatar){%>
    <img src="<%=profile_user.avatar%>" alt="<%=user.name%>" />
    <%} else{%>
    <img src="/images/ssm.jpg" alt="<%=user.name%>" />
    <% }%>
    <div class="info">
      <p>Name : <%=profile_user.name%></p>
      <p>Email : <%=profile_user.email%></p>
    </div>
  </div>
  <form
    action="/users/update/<%=profile_user.id%>"
    method="POST"
    enctype="multipart/form-data"
  >
    <h1>Update</h1>
    <input
      type="text"
      name="name"
      value="<%=profile_user.name%>"
      placeholder="Your
  Name"
      required
    />
    <input
      type="email"
      name="email"
      value="<%=profile_user.email%>"
      placeholder="Your
  Email"
      required
    />
    <input
      class="file"
      type="file"
      name="avatar"
      placeholder="Profile Picture"
    />
    <button type="submit" value="Update">Update</button>
  </form>
  <div class="friends-list">
    <ul>
      <h1>Friends</h1>
      <%for(u of friends){%>

      <li>
        <a href="/users/profile/<%=u.to_user._id%>"> <%=u.to_user.name%> </a>
      </li>

      <%}%>
    </ul>
  </div>
</main>

<%} else {%>
<aside>
  <div class="pic">
    <% if(profile_user.avatar){%>
    <img src="<%=profile_user.avatar%>" alt="<%=user.name%>" />
    <%} else{%>
    <img src="images/sm.jpg" alt="<%=user.name%>" />
    <% }%>
  </div>
  <div class="info">
    <p>Name : <%=profile_user.name%></p>
    <p>Email : <%=profile_user.email%></p>
    <p>
      <%if(friend==true){%>

      <a href="/users/add-friend?id=<%=profile_user._id%>" id="friend"
        >Remove Friend</a
      >
      <%}else{%>
      <a href="/users/add-friend?id=<%=profile_user._id%>" id="friend"
        >Add Friend</a
      >
      <%}%>
    </p>
  </div>
</aside>

<%}%>
<script
  src="<%=assetPath('toggle_friend.js')%>"
  type="text/javascript"
></script>
