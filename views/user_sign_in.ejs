<link rel="stylesheet" href="/css/signin.css" />
<main>
  <form action="/users/create-session" method="POST">
    <h1>Sign In</h1>
    <input type="email" required name="email" placeholder="Enter Email" />
    <input
      type="password"
      required
      name="password"
      placeholder="Enter Password"
    />
    <input
      type="password"
      required
      name="confirm_password"
      placeholder="Confirm password"
    />
    <button type="submit" value="Sign In">SignIn</button>
  </form>
</main>
