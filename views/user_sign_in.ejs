<link rel="stylesheet" href="/css/signin.css" />
<main>
  <form action="/users/create-session" method="POST">
    <h1>Sign In</h1>
    <input type="email" required name="email" placeholder="Enter Email" />
    <input
      type="password"
      required
      name="password"
      placeholder="Enter Password"
    />

    <button type="submit" value="Sign In">SignIn</button>
  </form>
  <p>
    <a href="/auth" class="google"> Forget password ?</a>
  </p>
  <p>
    <a href="/users/auth/google" class="google">Google SignIn/SignUp</a>
  </p>
</main>
